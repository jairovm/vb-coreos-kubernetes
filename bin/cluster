#!/usr/bin/env ruby
require 'optparse'

class Cluster
  VMS = %w[etcd-01 etcd-02 etcd-03 kb-master kb-worker-1 kb-worker-2].freeze

  attr_accessor :action

  def initialize(action:)
    @action = action
  end

  def process
    case action
    when 'start' then start
    when 'stop'  then stop
    else
      parse ['-h']
    end
  end

private

  def start
    VMS.each do |vm|
      system "VBoxManage startvm #{vm} --type headless"
      puts ''
      sleep 5
    end
  end

  def stop
    VMS.each do |vm|
      system "VBoxManage controlvm #{vm} acpipowerbutton"
      puts "Stopping #{vm} machine"
      sleep 3
    end
  end
  
  def parse(arguments)
    OptionParser.new do |opts|
      opts.banner = "Usage: bin/cluster start|stop"

      opts.on('-h', '--help', 'Display this screen') do
        puts opts
        exit
      end
    end.parse!(arguments)
  end
end

Cluster.new(action: ARGV.first).process
